<!-- views/licitacoes.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Licitações</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">Licitações</h1>
        <table class="table table-bordered table-striped">
            <thead class="table-dark">
                <tr>
                    <th>Jurisdicionado</th>
                    <th>Documento TCE nº</th>
                    <th>Número da Licitação</th>
                    <th>Modalidade</th>
                    <th>Tipo</th>
                    <th>Objeto</th>
                    <th>Data do Certame</th>
                    <th>Local do Certame</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% licitacoes.forEach(licitacao => { %>
                    <tr>
                        <td><%= licitacao.Jurisdicionado %></td>
                        <td><%= licitacao.DocumentoTCENumero %></td>
                        <td><%= licitacao.NumeroLicitacao %></td>
                        <td><%= licitacao.Modalidade %></td>
                        <td><%= licitacao.Tipo %></td>
                        <td><%= licitacao.Objeto %></td>
                        <td><%= licitacao.DataCertame ? licitacao.DataCertame.toLocaleString() : '' %></td>
                        <td><%= licitacao.LocalCertame %></td>
                        <td>
                            <a href="/licitacoes/edit/<%= licitacao._id %>" class="btn btn-primary btn-sm">Editar</a>
                            <a href="/licitacoes/delete/<%= licitacao._id %>" onclick="return confirm('Tem certeza que deseja excluir esta licitação?');" class="btn btn-danger btn-sm">Excluir</a>
                        </td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
        <a href="/" class="btn btn-secondary">Voltar</a>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
